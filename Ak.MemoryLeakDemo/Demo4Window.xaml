<Window x:Class="Ak.MemoryLeakDemo.Demo4Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Demo4Window" Height="300" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120px"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="240px"/>
        </Grid.ColumnDefinitions>
        <Label Style="{StaticResource HeaderText}">Demo 4</Label>
        <Image Grid.Row="0" Grid.Column="1" Source="Images/Profilbild_andrekraemer.png" Width="85" Height="85" HorizontalAlignment="Right" Margin="0,0,40,0" />
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="40,0,0,0">
            <Button x:Name="ChangeViewModel" Click="ChangeViewModel_Click">Change View Model</Button>
            <Grid x:Name="ContentGrid" MinHeight="130">
                
            </Grid>
        </StackPanel>
    </Grid>
</Window>
